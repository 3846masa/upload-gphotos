{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    // "allowJs": true,
    // "checkJs": true,
    // "jsx": "preserve",
    "declaration": true,
    // "sourceMap": true,
    // "outFile": "./",
    "outDir": "./lib",
    "rootDir": "./src",
    // "removeComments": true,
    // "noEmit": true,
    // "importHelpers": true,
    // "downlevelIteration": true,
    // "isolatedModules": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    // "baseUrl": "./",
    // "paths": {},
    // "rootDirs": [],
    // "typeRoots": [],
    "types": ["node"]
    // "allowSyntheticDefaultImports": true,
    // "preserveSymlinks": true,

    // "sourceRoot": "./",
    // "mapRoot": "./",
    // "inlineSourceMap": true,
    // "inlineSources": true,

    // "experimentalDecorators": true,
    // "emitDecoratorMetadata": true,
  },
  "include": ["src"],
  "exclude": ["lib"]
}
